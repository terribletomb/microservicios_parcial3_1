        "name": "MicroCRUD Libros",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Create Service",
            "item": [
                {
                    "name": "Crear Libro",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has ID and save it\", function () {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response).to.have.property('id');",
                                    "    pm.collectionVariables.set(\"libro_id\", response.id);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"titulo\": \"El Señor de los Anillos\",\n    \"autor\": \"J.R.R. Tolkien\",\n    \"anio\": 1954\n}"
                        },
                        "url": {
                            "raw": "http://localhost:9001/libros",
                            "protocol": "http",
